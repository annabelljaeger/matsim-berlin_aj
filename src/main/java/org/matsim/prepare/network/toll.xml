<?xml version="1.0" encoding="utf-8"?>

<!-- Definition der Road Pricing Konfiguration für eine Flächenmaut -->

<roadpricing type="area" name="CityAreaToll">

	<!-- Beschreibung der Maut -->
	<description>
		This is a road pricing scheme for an area toll.
	</description>

	<!-- Definition der Links, die zur Mautzone gehören -->
	<links>
		<link id="1"/>
		<link id="2"/>
		<link id="3"/>
		<!-- Weitere Links können hier hinzugefügt werden -->
	</links>

	<!-- Definition der Kosten für die Nutzung der Mautzone -->
	<cost start_time="00:00:00" end_time="24:00:00" amount="10.00"/>
	<!-- Weitere Kostenstrukturen können hinzugefügt werden, z.B. für unterschiedliche Zeiträume -->

</roadpricing>
